            </div>

            <% @event.users.each do |user| %>
            <%= link_to user_path(user.id) do %>
              <hr class="dropdown-divider">
              <div style="text-align:center" class="dropdown-item-hover-color">
              <%= user.fname %>
              </div>
            <% end %>

            <% end %>
          </div>
        </div>
