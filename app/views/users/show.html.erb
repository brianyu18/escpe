<body id="body">
    <main class="site" id="top" style="background-color:#735a5a">


<div class="column is-half nav-home">

    <nav class="navbar" aria-label="main navigation">
        <div class="navbar-brand is">
            <button class="button navbar-burger" style="margin-top:8px;margin-right:460px" data-target="navMenu">
                <span style="background-color:#ffffff"></span>
                <span style="background-color:#ffffff"></span>
                <span style="background-color:#ffffff"></span>
            </button>

        </div>
        <div class="navbar-menu">
            <div class="navbar-start">

                <a class="navbar-item"><h3 class="title has-text-white" style="font-weight:900">ESCPE</h3></a>
                <a class="navbar-item has-text-white" <%= link_to "Find Events", user_event_path(user_id:@user,event_id:1) %></a>
                <a class="navbar-item has-text-white" <%= link_to "Events", user_events_path(@user) %></a>
                <a class="navbar-item has-text-white" href="../../../sessions/logout">Logout</a>
            </div>
        </div>
    </nav>
</div>


<div class="home-columns columns"style="font-color:#636363">
  <div class="navbar-menu is-hidden-desktop" style="position:static; background-color: #735a5a" id="navMenu">
      <span><a class="navbar-item is-active has-text-white" style="position:static; background-color: #735a5a" href="<%= @user.id %>">Profile</a></span>
      <span><a class="navbar-item is-active has-text-white" style="position:static; background-color: #735a5a" href=<%= user_events_path(@user)%>>Events</a></span>
      <span><a class="navbar-item is-active has-text-white" style="position:static; background-color: #735a5a" href="../../../sessions/logout">Logout</a></span>

  </div>


    <div class="column is-half is-home-left-column" style="background-image:url(<%= "#{@user.img_url}" %>); background-size: cover; background-repeat:no-repeat; background-position:center">
</div>

    <div class="column is-half is-home-right-column" style="position:static; color:#6d6c6c; background-color: #ffffff">


<br>
<br>
<br>

<h1 id="Name"><%= "#{@user.fname} #{@user.lname}" %></h1>
<hr style="background-color:#6d6c6c">
<br>
<!--<h4 id=""><%= "Location: #{@user.fname}" %></h4>-->

<div class="column is-pulled-right is-half">
<div class="box">
  <article class="media">
    <div class="media-left">

    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <div class="text is-centered">
          <strong>Profile...</strong>
          </div>
          <br>
          <%=@user.profile%>
        </p>
      </div>
    </div>
  </article>
</div>
</div>

<div class="column is-pulled-right is-half">
<div class="dropdown is-hoverable is-pulled-left is-center"style="margin-left:50px">
  <script>var dropdown = document.querySelector('.dropdown');
dropdown.addEventListener('click', function(event) {
  event.stopPropagation();
  dropdown.classList.toggle('is-active');
});</script>
  <div class="dropdown-trigger">
    <button class="button" aria-haspopup="true" aria-controls="dropdown-menu2">
      <span>See the events I'm attending</span>
      <span class="icon is-small">
        <i class="fas fa-heart" style="color:#ff4f4f" aria-hidden="true"></i>
      </span>
    </button>
  </div>
  <div class="dropdown-menu" id="dropdown-menu2" role="menu">
    <div class="dropdown-content">
      <div style="text-align:center" class="dropdown-item">
        <strong> --ATTENDING--</strong>
      </div>

      <% @user.events.each do |event| %>
      <%= link_to user_event_path(user_id: @user.id, event_id: event.id) do %>
        <hr class="dropdown-divider">
        <div style="text-align:center" class="dropdown-item-hover-color">
        <%= event.name %>
        </div>
      <% end %>

      <% end %>

    </div>
  </div>
</div>
</div>


